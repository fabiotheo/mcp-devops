#!/usr/bin/env node

/**
 * Launcher script for the new Ink-based interface
 * This provides a simple entry point for users
 */

import { spawn } from 'child_process';
import { fileURLToPath } from 'url';
import path from 'path';
import os from 'os';

const __filename = fileURLToPath(import.meta.url);
const __dirname = path.dirname(__filename);

// Determine interface location
const interfacePath = path.join(__dirname, 'interface-v2', 'mcp-ink-cli.mjs');

// Get user from environment
const user = process.env.MCP_USER || process.env.USER || 'default';

// Pass all arguments to the interface
const args = process.argv.slice(2);

// Launch the interface
const child = spawn('node', [interfacePath, ...args], {
    stdio: 'inherit',
    env: {
        ...process.env,
        MCP_USER: user
    }
});

// Handle exit
child.on('exit', (code) => {
    process.exit(code || 0);
});

child.on('error', (err) => {
    console.error('Failed to launch interface:', err);
    process.exit(1);
});